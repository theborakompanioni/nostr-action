  "bugs": {
    "url": "https://github.com/theborakompanioni/nostr-action/issues"
  },
  "homepage": "https://github.com/theborakompanioni/nostr-action#readme",
  "dependencies": {
    "@actions/core": "^1.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.0",
    "@babel/core": "^7.16.12",
    "@babel/preset-env": "^7.16.11",
    "@vercel/ncc": "^0.33.1",
    "babel-jest": "^27.4.6",
    "eslint": "^8.8.0",
